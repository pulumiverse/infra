{
  "name": "@pulumiverse/ci-mgmt",
  "version": "0.0.1",
  "description": "Management of the CI process around Pulumiverse",
  "main": "index.ts",
  "scripts": {
    "discovery": "wget https://json.schemastore.org/github-workflow.json -O github-workflow.json && json2ts -i github-workflow.json -o src/github-workflow.d.ts --unreachableDefinitions --ignoreMinAndMaxItems",
    "gen-config-schema": "ts-node cmd/generate-config-schema.ts",
    "gen": "ts-node cmd/generate.ts",
    "lint": "eslint src/**/*.ts && tsc --noEmit",
    "format": "prettier --list-different --write src cmd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pulumiverse/infra.git"
  },
  "keywords": [
    "configuration",
    "code",
    "generation",
    "pulumi",
    "pulumiverse"
  ],
  "author": "Pulumiverse",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pulumiverse/infra/issues"
  },
  "homepage": "https://github.com/pulumiverse/infra#readme",
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "json-schema-to-typescript": "^11.0.2",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "yaml": "^2.1.1",
    "yargs": "^17.5.1",
    "zod": "^3.19.1",
    "zod-to-json-schema": "^3.17.1"
  }
}
